<%= link_to "Register as a Cleaner", new_registration_registration_path(user_type: "Cleaner") %>

<%= form_tag new_booking_path, method: :get do %>
<%= text_field_tag :location, params[:location], placeholder: "Find a location...", class: "form-control" %>
<%= select_date(date = Date.current, options = {}, html_options = {}) %>
<%#= time_select :start_time, :default, default: Time.now, minute_step: 15, ignore_date: true %>
